{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "templates/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "static/**/*.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "functions": {
    "app.py": {
      "maxDuration": 30,
      "memory": 1024,
      "runtime": "@vercel/python@3.9"
    }
  },
  "installCommand": "pip install -r requirements.txt"
}